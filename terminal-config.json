{
  "name": "AllPuffs Terminal",
  "version": "1.0.0",
  "display": {
    "width": 480,
    "height": 800,
    "orientation": "portrait",
    "fullscreen": true,
    "touchEnabled": true
  },
  "hardware": {
    "cardReader": {
      "enabled": true,
      "types": ["swipe", "chip", "tap"],
      "port": "/dev/ttyUSB0"
    },
    "pinPad": {
      "enabled": true,
      "encrypted": true
    },
    "printer": {
      "enabled": true,
      "type": "thermal",
      "width": 80
    }
  },
  "network": {
    "requireConnection": true,
    "apiEndpoint": "https://api.allpuffs.com",
    "timeout": 30000
  },
  "payment": {
    "processors": {
      "ach": {
        "provider": "dwolla",
        "endpoint": "/api/ach/process"
      },
      "card": {
        "provider": "stripe",
        "endpoint": "/api/card/process"
      }
    },
    "pointsMultiplier": {
      "ach": 2,
      "card": 1
    }
  },
  "kiosk": {
    "autoReset": true,
    "resetTimeout": 30000,
    "idleTimeout": 60000,
    "soundEnabled": true
  }
}
